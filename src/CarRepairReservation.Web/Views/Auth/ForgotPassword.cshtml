@model CarRepairReservation.Web.Models.Auth.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        </div>
        <div class="auth-body">
            <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="invalid-tooltip"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" id="submitButton">
                        <div class="spinner"></div>
                        <span>
                            <i class="bi bi-envelope"></i> Şifre Sıfırlama Bağlantısı Gönder
                        </span>
                    </button>
                    <a asp-action="Login" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Giriş Sayfasına Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form doğrulama için Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        var button = document.getElementById('submitButton')
                        button.classList.add('loading')
                        button.disabled = true
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Hata mesajlarını otomatik gizle
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 