@using CarRepairReservation.Web.Models.Auth
@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-logo">
        <i class="bi bi-car-front"></i>
    </div>
    <div class="auth-box">
        <h2>Hoş Geldiniz</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors">
                <ul></ul>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta adresi</label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
            </div>

            <button type="submit" class="btn btn-primary">
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                Giriş Yap
            </button>
        </form>
    </div>
    <div class="auth-footer">
        <p>
            Hesabınız yok mu? 
            <a asp-action="Register">Hemen kayıt olun</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                var btn = $(this).find('button[type="submit"]');
                var spinner = btn.find('.spinner-border');
                btn.prop('disabled', true);
                spinner.removeClass('d-none');
            });
        });
    </script>
} 