@{
    ViewData["Title"] = "Email Doğrulama";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-logo">
        <i class="bi bi-car-front-fill"></i>
    </div>
    <div class="auth-box">
        <h2>Email Doğrulama</h2>
        <p class="text-muted text-center mb-4">
            Doğrulama emailini tekrar göndermek için email adresinizi girin.
        </p>

        <form asp-action="ResendVerification" method="post">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Email adresinizi girin" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send me-2"></i>
                    Doğrulama Emaili Gönder
                </button>
                <a asp-action="Login" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Giriş Sayfasına Dön
                </a>
            </div>
        </form>
    </div>
</div> 